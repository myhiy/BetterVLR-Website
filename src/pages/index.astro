---
export const prerender = true;

import Layout from "layouts/Layout.astro";

import LinkButton from "components/LinkButton.astro";
import AutoSizeGrid from "components/AutoSizeGrid.astro";

const features = [
    {
        icon: "gear",
        title: "Customizable",
        description:
            "Easily customize VLR to suit your preferences and enhance your experience",
    },
    {
        icon: "joystick",
        title: "Enhance The Website",
        description:
            "Enhance the website with features like past players, map winrate, bracket higlighting much and more!",
    },
    {
        icon: "speech-balloon",
        title: "Enhance The Chat",
        description:
            "Enhance the chat with features like emojis, image embedding, polls and much and more!",
    },
    {
        icon: "globe",
        title: "Excellent Browser Support",
        description: "Works just as well inside your favourite Browser!",
    },
    {
        icon: "artist-palette",
        title: "Themes",
        description: "Soon™️",
    },
    {
        icon: "locked",
        title: "Block Users",
        description:
            "Maintain control by blocking unwanted users for a more comfortable interaction",
    },
];

if (features.length % 3 !== 0)
    throw new Error("Feature amount must be multiple of 3");
---

<Layout description="VLR.gg but better!">
    <header>
        <section class="tagline">
            <h1 class="p-display">BetterVLR</h1>
            <h2>VLR.GG but better!</h2>
        </section>

        <section class="buttons">
            <AutoSizeGrid>
                <LinkButton href="/download" class="main-btn">
                    Download BetterVLR
                </LinkButton>
                <LinkButton href="/discord" target="_blank">
                    Join our Support Server
                </LinkButton>
                <LinkButton href="/github" target="_blank">
                    View on GitHub
                </LinkButton>
            </AutoSizeGrid>
        </section>
    </header>

    <!-- Heavily inspired by Vite's homepage https://vitejs.dev/ (or if they changed it, https://archive.ph/o6Lmn) -->
    <section class="features">
        {
            features.map(({ icon, title, description }) => (
                <div class="feature-card">
                    <div class="feature-icon" aria-hidden="true">
                        <img src={`/assets/${icon}.png`} alt="" />
                    </div>
                    <h3 class="feature-title">{title}</h3>
                    <p class="feature-desc">{description}</p>
                </div>
            ))
        }
    </section>
</Layout>

<style>
    .tagline {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    section {
        margin-bottom: 2em;
    }

    .tagline {
        margin-bottom: 1em;
    }

    h1,
    h2 {
        line-height: 1;
        margin: 0;
        text-align: center;
    }

    h1 {
        color: var(--accentRed);
    }

    h2 {
        color: var(--grey1);
        font-size: 2.25em;
    }

    .buttons {
        display: flex;
        justify-content: center;
    }

    .main-btn {
        background-color: var(--accentRed);
        color: var(--bgCurrentWord);
        outline: none;
    }

    .main-btn:focus {
        outline: 2px solid var(--accentBlue);
    }

    .main-btn:hover {
        background-color: rgba(var(--accentPurpleRgb), 0.8);
    }

    .main-btn:active {
        background-color: rgba(var(--accentPurpleRgb), 0.9);
        outline: none;
    }

    .features {
        display: grid;
        gap: 1em;
        grid-template-columns: repeat(3, 1fr);
    }

    @media screen and (max-width: 1000px) {
        .features {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media screen and (max-width: 600px) {
        .features {
            grid-template-columns: 1fr;
        }
    }

    .feature-card {
        background-color: var(--bg4);
        padding: 16px;
        border-radius: 8px;

        transition: 200ms box-shadow cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .feature-card:hover {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .feature-icon {
        padding: 0.7em;
        width: 1.5em;
        height: 1.5em;
        background-color: var(--bgCurrentWord);
        border-radius: 6px;
    }

    .feature-icon img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .feature-title {
        font-size: var(--fg1);
    }

    .feature-desc {
        font-size: 0.9em;
        filter: brightness(90%);
        margin: 0;
    }

    svg {
        width: 1.5em;
        height: 1.5em;
    }
</style>
